<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffeeeeee"
        android:clickable="false"
        android:divider="@null"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" 
        android:transcriptMode="alwaysScroll"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="15dp">
    </ListView>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
      
        <ImageView
           android:id="@+id/image_sound"
           android:layout_height="35dp"
           android:layout_width="0dp"
           android:layout_weight="1"
    	   android:layout_alignParentBottom="true"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:src="@drawable/t7"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           />
        <RelativeLayout 
            android:id="@+id/relative_1"
            android:layout_width="0dp"
             android:layout_weight="4"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/image_sound"
             android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp">
           <LinearLayout 
               android:layout_height="34dp"
               android:layout_width="fill_parent"
               android:orientation="horizontal"
               android:id="@+id/linear_1"
            > 
       <EditText 
           android:layout_width="0dp"
           android:layout_weight="4"
           android:layout_height="fill_parent"
           android:id="@+id/edit_text"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:background="@null"
           android:singleLine="false"
           android:maxHeight="80dp"
           />
        <ImageView
           android:id="@+id/image_face"
           android:layout_height="34dp"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_marginRight="5dp"
           android:src="@drawable/sz"
           android:layout_toRightOf="@id/edit_text"
           />
        </LinearLayout>
        <TextView 
            android:id="@+id/edit_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@+id/linear_1"
            android:layout_alignParentBottom="true"
            />
        </RelativeLayout>
        
        
        <FrameLayout
           android:layout_height="35dp"
           android:layout_width="0dp"
            android:layout_weight="1"
           android:layout_marginRight="5dp"
           android:layout_alignParentBottom="true"
           android:layout_toRightOf="@id/relative_1"
           android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp" > 
       <ImageView
           android:id="@+id/send_bt"
           android:layout_height="fill_parent"
           android:layout_width="fill_parent"
           android:src="@drawable/a6c"
            />
          <Button
           android:id="@+id/send_bt2"
           android:layout_height="fill_parent"
           android:layout_width="wrap_content"
           android:text="发送"
           android:textColor="#FFFFFF"
           android:background="@drawable/send_background"
           android:textSize="10dp"
           android:visibility="gone"
           /> 
          
         </FrameLayout>
   
    </LinearLayout>
  
</LinearLayout>