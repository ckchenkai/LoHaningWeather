<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weather="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boader_bg"
    android:padding="10dip"
    android:layout_marginBottom="10.0dip"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/index_label"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="指数" />

    <ImageView
        android:id="@+id/divider"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:src="#88ffffff"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_below="@id/index_label" />

   <!-- 第一个 -->
   <RelativeLayout 
    android:id="@+id/wind_index"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="-10dp"
    android:paddingTop="8dp"
    android:layout_below="@id/divider"
    android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/index_icon_iv"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12.0dip"
        android:src="@drawable/chuanyi" />

    <TextView
        android:id="@+id/cy_title"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/index_icon_iv"
        android:gravity="center|left"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="穿衣指数" />

    <ImageView
        android:id="@+id/dotline1"
        android:src="@drawable/dotted_line_624"
        android:scaleType="fitXY"
        android:layout_height="1.0dp"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@id/cy_title"
        android:layout_below="@id/cy_title" />

    <TextView
        android:id="@+id/index_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_below="@id/dotline1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/index_icon_iv"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="详细说明"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/cy_detail"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="36.0dip"
        android:layout_below="@id/index_desc_tv"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="--" />

</RelativeLayout>


    
    <ImageView
        android:id="@+id/divider2"
        android:src="@drawable/dotted_line_624"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/wind_index"
        android:scaleType="fitXY" />

    <!-- 第二个 -->
    
    <RelativeLayout 
    android:id="@+id/ua_index"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/divider2"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/index_icon_iv2"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12.0dip"
        android:src="@drawable/ganmao" />

    <TextView
        android:id="@+id/gm_title"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/index_icon_iv2"
        android:gravity="center|left"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="感冒指数" />

    <ImageView
        android:id="@+id/dotline2"
        android:src="@drawable/dotted_line_624"
        android:scaleType="fitXY"
        android:layout_height="1.0dp"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@id/gm_title"
        android:layout_below="@id/gm_title" />

    <TextView
        android:id="@+id/index_desc_tv2"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_below="@id/dotline2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/index_icon_iv2"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="详细说明" 
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/gm_detail"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="36.0dip"
        android:layout_below="@id/index_desc_tv2"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="--" />

</RelativeLayout>
    
    
    
    
    
    
    
    
    
    
   <ImageView
        android:id="@+id/divider3"
        android:src="@drawable/dotted_line_624"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ua_index"
        android:scaleType="fitXY" />

  
    <!-- 第三个 -->
    
    <RelativeLayout 
    android:id="@+id/clothe_index"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical" 
    android:layout_below="@id/divider3">

    <ImageView
        android:id="@+id/index_icon_iv3"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="12.0dip"
        android:src="@drawable/fangshai" />

    <TextView
        android:id="@+id/fs_title"
        android:textColor="@android:color/white"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/index_icon_iv3"
        android:gravity="center|left"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="防晒指数" />

    <ImageView
        android:id="@+id/dotline3"
        android:src="@drawable/dotted_line_624"
        android:scaleType="fitXY"
        android:layout_height="1.0dp"
        android:layout_width="fill_parent"
        android:layout_alignLeft="@id/fs_title"
        android:layout_below="@id/fs_title" />

    <TextView
        android:id="@+id/index_desc_tv3"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:layout_below="@id/dotline3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/index_icon_iv3"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="详细说明" 
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/fs_detail"
        android:textSize="11sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="36.0dip"
        android:layout_below="@id/index_desc_tv3"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="--" />

</RelativeLayout>

</RelativeLayout>