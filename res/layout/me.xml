<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffeeeeee">
<!-- 标题栏 -->
<View 
    android:id="@+id/status_bar"
    android:layout_height="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/friendactivity_comment_detail_list2"/>
   <RelativeLayout
       android:id="@+id/me_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/friendactivity_comment_detail_list2" >


    
    <TextView
        android:id="@+id/my_set"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:text="我的设置"
		android:textColor="@color/location"
		android:gravity="center"
		android:textSize="20dp"
		android:layout_centerInParent="true"/>
    
           <TextView 
        android:id="@+id/register"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="注册"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.04"
        android:background="@drawable/background_border2" >

        <com.ck.weather.widget.CircleImageView
        android:id="@+id/headImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/rs"
         />
        <TextView 
            android:id="@+id/headName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/headImage"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="登录"
            android:textColor="@color/dark_blue"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <!-- 下面布局 -->
    <LinearLayout 
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
    <LinearLayout 
	android:orientation="vertical" 
	android:id="@+id/info_qzone_mail" 
	android:background="@drawable/shape_bg" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_marginLeft="10.0dip" 
	android:layout_marginTop="10.0dip" 
	android:layout_marginRight="10.0dip">
    <LinearLayout 
    android:gravity="center_vertical" 
    android:orientation="horizontal" 
    android:id="@+id/qzone" 
    android:layout_width="fill_parent" 
    android:layout_height="50.0dip">
    
        <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:src="@drawable/tuisong" 
        android:scaleType="centerInside"
        android:layout_margin="5dp"/>
        
        <TextView 
        android:textSize="18.0sp" 
        android:textColor="#ff545454" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:text="自动更新天气" 
        android:layout_weight="1.0" />
        
        <ToggleButton 
        android:layout_width="60dp" 
        android:layout_height="30dp" 
        android:layout_marginRight="10.0dip" 
        android:checked="true"
        android:textOn="" 
        android:textOff=""
        android:background="@drawable/bg_toggle"/>
        
    </LinearLayout>
    
    <View 
    android:background="@drawable/shape_line" 
    android:layout_width="fill_parent" 
    android:layout_height="1.0px" />
    
    <LinearLayout 
    android:gravity="center_vertical" 
    android:orientation="horizontal" 
    android:id="@+id/mail" 
    android:layout_width="fill_parent" 
    android:layout_height="50.0dip">
    
        <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:src="@drawable/zidong"
        android:scaleType="centerInside"
        android:layout_margin="5dp"/>
        
        <TextView 
        android:textSize="18.0sp"
        android:textColor="#ff545454" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:text="推送通知" 
        android:layout_weight="1.0" />
        
        <ToggleButton 
        android:layout_width="60dp" 
        android:layout_height="30dp" 
        android:layout_marginRight="10.0dip" 
        android:checked="true"
        android:textOn="" 
        android:textOff=""
        android:background="@drawable/bg_toggle"/>
        
    </LinearLayout>
    
    <View
    android:background="@drawable/shape_line" 
    android:layout_width="fill_parent" 
    android:layout_height="1.0px" />
    
    <LinearLayout 
    android:id="@+id/layout_editpwd"
    android:gravity="center_vertical" 
    android:orientation="horizontal" 
    android:clickable="true" 
    android:layout_width="fill_parent" 
    android:layout_height="50.0dip">
    
        <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:src="@drawable/share" 
        android:scaleType="centerInside"
        android:layout_margin="5dp"/>
        
        <TextView 
        android:id="@+id/edit_pwd"
        android:textSize="18.0sp" 
        android:textColor="#ff545454" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip" 
        android:text="修改密码" 
        android:layout_weight="1.0" />
        
        <ImageView 
        android:layout_width="12.0dip" 
        android:layout_height="12.0dip" 
        android:layout_marginRight="10.0dip" 
        android:src="@drawable/into_icon" />
   </LinearLayout> 
   
    <View 
    android:background="@drawable/shape_line" 
    android:layout_width="fill_parent" 
    android:layout_height="1.0px" />
    
    
     <LinearLayout 
    android:gravity="center_vertical" 
    android:orientation="horizontal" 
    android:id="@+id/layout_outlogin" 
    android:layout_width="fill_parent" 
    android:layout_height="50.0dip">
    
        <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:src="@drawable/tuichu" 
        android:scaleType="centerInside"
        android:layout_margin="5dp"/>
        
        <TextView 
        android:textSize="18.0sp" 
        android:textColor="#ff545454" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10.0dip" 
        android:text="退出登录" 
        android:layout_weight="1.0" />
        
        <ImageView 
        android:layout_width="12.0dip" 
        android:layout_height="12.0dip" 
        android:layout_marginRight="10.0dip" 
        android:src="@drawable/into_icon" />
        
    </LinearLayout>
    
    <View 
    android:background="@drawable/shape_line" 
    android:layout_width="fill_parent" 
    android:layout_height="1.0px" />
    
   </LinearLayout>
   </LinearLayout>
</LinearLayout>
